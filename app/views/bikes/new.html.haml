.bikes
  .new
    .content
      .content__form
        = form_for @bike do |f|
          .content__form__box
            .content__form__box__name
              = "ブランド名"
              = f.text_field :brand,class:"field"
          .content__form__box
            .content__form__box__name
              = "車種名　　"
              = f.text_field :model,class:"field"
          .content__form__box
            .content__form__box__name
              = "価格　　　"
              = f.text_field :price,class:"field"
          .content__form__box
            .content__form__box__name
              = "重さ　　　"
              = f.text_field :weight,class:"field"
          .content__form__image
            .content__form__image__name
              画像
            %label
              .content__form__image__box
                .content__form__image__box__label
                  選択
                  = f.fields_for :images do |image|
                    = image.file_field :src,class:"file"
          .content__form__submit
            = f.submit :"登録する", class:"content__form__submit__btn"
      
        







